{% extends 'layout.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row justify-content-center mt-4">
        <div class="col-xs-4 text-center">
            <h2>Bonjour !</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xs-4 text-center">
            <h6>Connectez-vous pour rejoindre la communauté.</h6>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xs-4 text-center">
            <p>{{ errors|last }}</p>
        </div>
    </div>
</div>
<div class="container-fluid">
    <form class="needs-validation" novalidate action="" method="POST">
        <div class="row justify-content-center">
            <div class="form-floating col-xs-6 m-3">
                <label for="nickname" class="form-label m-0">Identifiant</label>
                <input type="name" class="form-control font-italic" name="nickname" placeholder="Pseudo" value="" required>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xs-6 m-0">
                <label for="password" class="form-label m-0">Mot de passe</label>
                <input type="password" class="form-control font-italic" name="password" placeholder="Au moins 5 caractères" value="" required>
            </div>
        </div>
        <div class="row justify-content-center">
              <div class="col-xs-2 m-4">
                  <button class="btn btn-primary" type="submit">Se connecter</button>
              </div>
        </div>
    </form>
    <div class="row justify-content-center">
        <div class="col-xs-2 text-center m-1">
            <a href="new"><p>Créer un nouveau compte ici.</p></a>
        </div>
    </div>
</div>
{% endblock %}