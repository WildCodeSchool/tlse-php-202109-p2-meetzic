<div class="container d-lg-flex flex-wrap">   
    <div class="col-12 col-lg-6 order-lg-2 my-4 mt-lg-5">
        <label for="avatar">
            {% if input.avatar == null %}
                <img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png" alt="picture of artist" class="col-9 col-lg-8 ms-5 private__img">
            {% else %}
                <img src="{{ input.avatar }}" alt="picture of artist" class="col-9 col-lg-8 ms-5 private__img">
            {% endif %}   
        </label>
    </div>
    <div class="col-12 col-lg-12 order-lg-1">
        <div class="container-fluid d-flex flex-wrap my-2 mt-lg-4">
            <div class="col-12 d-flex justify-content-center private__title">
                <h3>Bonjour {{ input.nickname }}</h3>
            </div>
            <div class="col-12 d-flex justify-content-center private__secondTitle">
                <p>Bienvenue sur votre profil !</p>
            </div>
        </div>    
    </div>
    <div class="container-fluid order-lg-3 col-lg-6 mt-lg-5 pt-lg-5">
        <div class="row col-12 d-flex flex-row ms-1">
            <div class="col-6">
                <label for="nickname" class="form-label text-center">Pseudo :
                    <input type="text" class="form-control" id="nickname" name="nickname" value="{{ input.nickname }}" disabled>
                </label>
            </div>
            <div class="col-6">
                <label for="password" class="form-label text-center">Mot de passe :
                    <input type="password" class="form-control" id="password" name="password" value="{{ input.password }}" disabled>
                </label>
            </div>
            <div class="col-6">
                <label for="email" class="form-label text-center">E-mail :
                    <input type="email" class="form-control" id="email" name="email" value="{{ input.email }}" disabled>
                </label>
            </div>       
            <div class="col-6" style="{% if input.band == null %}
                                            display:none
                                        {% else %}
                                            display:block
                                        {% endif %}">
                <label for="band" class="form-label text-center">Nom du groupe :
                    <input type="text" class="form-control" id="band" name="band" value="{{ input.band }}" disabled>
                </label>
            </div>       
            <div class="col-6">
                <label for="instrument" class="form-label text-center">Instrument :
                    <input type="text" class="form-control" id="instrument" name="instrument" value="{{ input.instrument }}" disabled>
                </label>
            </div>       
            <div class="col-6">
                <label for="experience" class="form-label text-center">Experience :
                    <input type="text" class="form-control" id="experience" name="experience" value="{{ input.experience }}" disabled>
                </label>
            </div>       
            <div class="col-6">
                <label for="status" class="form-label text-center">Disponible :
                    <input type="text" class="form-control" id="status" name="status" value=" {% if input.status == 0 %}Non disponible{% else %}Disponible{% endif %}" disabled>
                </label>
            </div>       
            <div class="col-6">
                <label for="style" class="form-label text-center">Genre musical :
                    <input type="text" class="form-control" id="style" name="style" value="{{ input.style }}" disabled>
                </label>
            </div>
        </div>
    </div>     
    <div class="col-12 d-flex my-3 order-lg-4 col-lg-11 justify-content-lg-end justify-content-center">
        <label for="description" class="form-label mt-3 d-flex justify-content-center flex-wrap">Description :
            <texterea type="text" class="form-control d-flex justify-content-center flex-wrap private__card" id="description" name="description" disabled>
                {{ input.description }}
            </texterea>
        </label>
    </div>             
</div>