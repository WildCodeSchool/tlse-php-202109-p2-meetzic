<article class="adCard">
    <a href= "profile?id={{ ad['id'] }}" class="text-decoration-none text-dark">
        <div class="container p-0">
            <div class="row ">
                <div class="col-12" class="title__adCard">
                    <h5 class="card-title ">{{ ad['title'] }}</h5>
                </div>
                <div class="col-4" class="image__adCard">
                    <img id="card-image" src={{ ad['avatar'] }} alt="user_picture">    
                </div>
                <div class="col-8 p-0" class="text__adCard">
                    <div class="text__adCard">
                        <p class="card-text">{{ ad['description'] }}</p>
                    </div>
                </div>
            </div>  
        </div>
    </a>
</article>
