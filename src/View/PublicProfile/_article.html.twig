<div class="container mt-5">
    <div class ="row">
        <div class="col-12">
            <div class="container">
                <div class ="row">
                    <div class="col-4">
                    <img src="{{ tupple.avatar }}" alt="" class="img-fluid h-75 w-auto border border-dark rounded shadow">
                    </div>
                    <div class="col-8">
                        <div class="container">
                            <div class ="row d-flex flex-wrap">
                                <div class="col-6 d-flex flex-wrap">
                                <h3 class="small font-italic text-muted">Pseudo </h3>
                                <p>{{ tupple.nickname }}</p>
                                </div>
                                <div class="col-6 d-flex flex-wrap">
                                <h3 class="small font-italic text-muted">Instrument</h3>
                                <p>{{ tupple.instrument }}</p>
                                </div>
                                <div class="col-6 d-flex flex-wrap">
                                <h3 class="small font-italic text-muted">Style musical</h3>
                                <p>{{ tupple.style }}</p>
                                </div>
                                <div class="col-6 d-flex flex-wrap">
                                <h3 class="small font-italic text-muted">Groupe</h3>
                                <p> {% if tupple.band == null %}
                                    Pas de groupe
                                    {% else %}
                                    {{ tupple.band }}
                                    {% endif %}       
                                </p>
                                </div>
                                <div class="col-6 d-flex flex-wrap">
                                <h3 class="small font-italic">Disponibilité</h3>
                                <p> {% if tupple.status == 0 %}
                                    Non disponible
                                    {% else %}
                                    Disponible
                                    {% endif %} 
                                </p>
                                </div>
                                <div class="col-6 d-flex flex-wrap">
                                <h3 class="small font-italic text-muted">Experience</h3>
                                <p> {% if tupple.experience == 'beginner' %}
                                    Débutant
                                    {% elseif tupple.experience == 'advanced' %}
                                    Intermediaire
                                    {% else %}
                                    Expert
                                    {% endif %}
                                </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-3">
    <div class="row d-flex justify-content-center">
        <div class="col-12 text-center">
        <p>{{ tupple.description }}</p>
        </div>
    </div>
</div>