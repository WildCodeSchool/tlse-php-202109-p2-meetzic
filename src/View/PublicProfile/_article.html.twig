<div class="container mt-5 d-flex flex-wrap">
    <div class="row col-lg-7 order-lg-1">
        <div class="col-xs-12 col-sm-12 col-lg-12 ">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-lg-6">
                        <div class="card-body">
                            <img src="{{ tupple.avatar }}" alt="picture of artist" class="img-fluid img-thumbnail h-100 border border-dark rounded shadow">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-lg-6 mt-5">
                        <div class="container">
                            <div class="row d-flex flex-wrap">
                                <div class="col-6">
                                    <h5 class="card-title small font-italic text-muted">Pseudo</h5>
                                    <p class="card-text">{{ tupple.nickname }}</p>
                                </div>
                                <div class="col-6">
                                    <h5 class="card-title small font-italic text-muted">Instrument</h5>
                                    <p class="card-text">{{ tupple.instrument }}</p>
                                </div>
                                <div class="col-6 mt-2">
                                    <h5 class="card-title small font-italic text-muted">Style musical</h5>
                                    <p class="card-text">{{ tupple.style }}</p>
                                </div>
                                <div class="col-6 mt-2">
                                    <h5 class="card-title small font-italic text-muted">Groupe</h5>
                                    <p class="card-text">
                                        {% if tupple.band == null %}
                                            Pas de groupe
                                        {% else %}
                                        {{ tupple.band }}
                                        {% endif %}
                                    </p>
                                </div>
                                <div class="col-6 mt-2">
                                    <h5 class="card-title small font-italic text-muted">Disponibilité</h5>
                                    <p class="card-text">
                                        {% if tupple.status == 0 %}
                                            Non disponible
                                        {% else %}
                                            Disponible
                                        {% endif %}
                                    </p>
                                </div>
                                <div class="col-6 mt-2">
                                    <h5 class="card-title small font-italic text-muted">Experience</h5>
                                    <p class="card-text">
                                        {% if tupple.experience == 'beginner' %}
                                            Débutant
                                        {% elseif tupple.experience == 'advanced' %}
                                            Intermediaire
                                        {% else %}
                                            Expert
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
            </div>
        </div>
    </div>
    <div class="row col-lg-12 order-lg-3">
        <div class="col-xs-12 col-sm-12 col-lg-6">
            <div class="card-body"> 
                <p class="card-text text-center">{{ tupple.description }}</p>
            </div>
        </div>
    </div>
    <div class="row col-lg-5 order-lg-2 mt-5">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="card border border-dark rounded shadow">
                <div class="card-body">
                    <h5 class="card-title">{{ tupple.title }}</h5>
                    <p class="card-text">{{ tupple.annonce }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row col-lg-12 order-lg-4">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="card-body col-lg-6 d-flex justify-content-center">
                <button type="button" class="btn btn-outline-warning text-dark">Contactez moi !</button>
            </div>
        </div>
    </div>
</div>