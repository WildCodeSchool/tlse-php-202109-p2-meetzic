{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/profile.css">
    <link rel="stylesheet" href="/assets/css/contact.css">
{% endblock %}


{% block content %}
<div class="container">
    <div class="row col-lg-5 order-lg-2 mt-lg-5 contact__adCard" >
        <div class="col-xs-12 col-sm-12 col-lg-6 mt-2 mt-lg-5">
            <div class="card  mt-lg-2">
                <div class="card-ad-body">
                    <h6 class="card-ad-title">{{ tupple.title }}</h6>
                    <p class="card-ad-text">{{ tupple.annonce }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row" >
        <div class="col-12 col-lg-6">
            <form action="home" method="POST" class="contact__box">
                <div class="validation__message">
                <h2> Merci !</h2>
                <h6>Votre message a bien été envoyé à {{ tupple.nickname }}.</h6> 
                </div>
                <button type="submit" class="btn btn-primary form__button">Fermer</button>
            </form>
       </div>
    </div>   
</div>
{% endblock %}