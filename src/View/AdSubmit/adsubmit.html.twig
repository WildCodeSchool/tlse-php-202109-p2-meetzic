{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/adsubmit.css">{% endblock %}

{% block content %}
    <form action="/advalidate" method="POST" class="form__box">
            <div class="mb-3 form__title">
                <label for="title" class="form-label">Titre de votre annonce:</label>
                <input type="text" name="title" class="form-control" id="title" aria-describedby="title">
            </div>
            <div class="mb-3 form__ad">
                <label for="description" class="form-label">Votre annonce:</label>
                <textarea type="text" name="description" class="form-control input__ad" id="description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary form__button">envoyer</button>
        </div>
    </form>
{% endblock %}